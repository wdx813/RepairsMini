/* pages/login/login.wxss */
.container {
    display: flex;
    justify-content: center;
}

.back-img {
    width: 100%;
    height: 100%;
}

.login-view-back {
    width: 640rpx;
    height: 720rpx;
    background-color: #a1c8e4;
    position: absolute;
    top: 200rpx;
    opacity: 0.8;
    text-align: center;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

.login-view {
    width: 640rpx;
    height: 720rpx;
    position: absolute;
    top: 200rpx;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

.title-view {
    height: 100rpx;
    width: 640rpx;
    background-color: #000;
    position: absolute;
    top: 100rpx;
    text-align: center;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    opacity: 0.3;
}

.title {
    font-size: 50rpx;
    color: #fff;
    position: absolute;
    top: 110rpx;
}

.edit-area {
    width: 285px;
    height: 230px;
    color: #fff;
    position: relative;
    top: 40rpx;
    left: 40rpx;
}

.input-txt {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 40rpx;
}

.input-view {
    height: 90rpx;
    background-color: #d2d7e2;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input-view input {
    height: 80rpx;
    width: 260px;
}

.placeholder {
    font-size: 32rpx;
}

.line-area {
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: #fff;
}

.line {
    width: 250rpx;
    height: 5rpx;
    background-color: #d2d7e2;
}

.btn-area {
    display: flex;
    justify-content: space-around;
    position: relative;
    top: 50rpx;
}

.register {
    background-color: #ff9620;
    color: #fff;
    border-radius: 50rpx;
    width: 220rpx;
    font-size: 40rpx;
}

.login {
    background-color: #00bddd;
    color: #fff;
    border-radius: 50rpx;
    width: 220rpx;
    font-size: 40rpx;
}