/* pages/search/search.wxss */
.search-box {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.input-box {
    width: 95%;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 15rpx 10rpx;
    font-size: 15px;
    border: 1px solid #eee;
}

.search-icon {
    width: 48rpx;
    height: 48rpx;
}

input {
    width: 97%;
    height: 80%;
}

.status-box {
    width: 75%;
    height: 70rpx;
    display: flex;
    align-items: center;
    font-size: 35rpx;
    color: #777;
    border: 1px solid #eee;
}

.search-row {
    width: 95%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 15rpx 0;
}

.status {
    width: 95%;
    font-size: 28rpx;
    text-align: center;
}

