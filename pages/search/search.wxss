    margin-top: 10rpx;
}

.repair-list {
    width: 100%;
}

.repair-item {
    width: 100%;
    padding: 15rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
    font-size: 15px;
    color: #777;
}

.repair-item-row {
    display: flex;
    align-items: center;
