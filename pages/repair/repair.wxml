<!--pages/repair/repair.wxml-->
<view class='container' bindtap='hideDeleteBtn'>
    <view class='title'>问题描述</view>
    <view class='textarea-box'>
        <textarea name='' maxlength='-1' placeholder='请输入对问题的描述，可输入1000字' placeholder-class='placeholder'></textarea>
    </view>
    <view class='title'>上传图片(长按可删除)</view>
    <view class='img-box'>
        <block wx:for='{{tempFilePaths}}' wx:key='unique'>
            <view class='preview-img-box'>
                <image class='preview-img' src='{{item}}' data-index='{{index}}' bindlongpress='showDeleteBtn'></image>
            </view>
        </block>
        <view class='delete-btn' wx:if='{{showDeleteBtn}}' style='position: absolute;left: {{left}}px; top: {{top}};px' bindtap='deleteTempFile'>
            <image class='icon-delete' src='../../images/icon-delete.png'></image>
        </view>
        <view class='choose-btn' wx:if='{{showChooseBtn}}' bindtap='bindChooseImg'>
            <image class='icon-camera' src='../../images/icon-camera.png'></image>
        </view>
    </view>
    <view class='title'>联系信息</view>
    <view class='info-box'>
        <view class='input-box'>
            <view class='info-title'>联系人</view>
            <input type='text' placeholder='请输入您的姓名' placeholder-class='placeholder'></input>
        </view>
        <view class='input-box'>
            <view class='info-title'>手机号</view>
            <input type='text' placeholder='请输入您的手机号' placeholder-class='placeholder'></input>
        </view>
    </view>
    <button class='submit'>确认提交</button>
</view>