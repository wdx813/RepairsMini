/* pages/register/register.wxss */
.back-img {
    width: 100%;
    height: 100%;
}

.frame {
    width: 100%;
    height: 1100rpx;
    position: absolute;
    top: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title-view {
    height: 100rpx;
    width: 640rpx;
    background-color: rgba(0, 0, 0, 0.3);
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    color: #fff;
    font-size: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.register-view-back {
    width: 640rpx;
    height: 1000rpx;
    background-color: rgba(161, 200, 228, 0.8);
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    display: flex;
    justify-content: center;
}

.register-item {
    height: 100%;
    width: 600rpx;
    color: #fff;
}

.input-txt {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 40rpx;
}

.input-view {
    height: 80rpx;
    background-color: #d2d7e2;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.input-view input {
    width: 550rpx;
}

.placeholder {
    font-size: 32rpx;
    color: #969696;
}

.usertype {
    color: #fff;
}

.submit {
    position: relative;
    top: 80rpx;
    background-color: #ff9620;
    border-radius: 50rpx;
    color: #fff;
}