/* pages/comment-detail/comment-detail.wxss */

page, .contain {
    background-color: #eee;
}

.module-box {
    width: 100%;
}

.module-title {
    padding: 10rpx 20rpx;
    font-size: 30rpx;
}

.basic-info-box {
    width: 100%;
    background-color: #fff;
    font-size: 28rpx;
    color: #777;
}

.basic-info-row {
    width: 100%;
    min-height: 70rpx;
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
}

.basic-info-col {
    display: flex;
    align-items: center;
}

.basic-info-col-left {
    width: 40%;
}

.basic-info-title {
    width: 120rpx;
    margin-right: 15rpx;
    color: #444;
    white-space: nowrap;
}

.basic-info-item {
    width: 100%;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.item-content {
    text-indent: 28px;
    padding: 10rpx 0;
    min-height: 40rpx;
    color: #777;
}

.img-info-box {
    width: 100%;
    height: 200rpx;
    padding: 5rpx 5rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
}

.repair-img {
    width: 170rpx;
    height: 170rpx;
}

.feedback-box {
    width: 100%;
    background-color: #fff;
    font-size: 28rpx;
    color: #777;
}

.feedback-item {
    width: 100%;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
}

.comment-box {
    width: 100%;
    background-color: #fff;
    font-size: 28rpx;
}

.star-image {
    width: 70rpx;
    height: 70rpx;
    src: "../../images/normal.png";
}

.item {
    width: 35rpx;
    height: 70rpx;
}

.item-left {
    position: relative;
    bottom: 70rpx;
}

.item-right {
    position: relative;
    bottom: 140rpx;
}

.comment-content{
    width: 100%;
}

.submit {
    height: 120rpx;
}