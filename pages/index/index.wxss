/* pages/index/index.wxss */

.container {
    background-color: #eee;
}

swiper {
    position: relative;
    top: 5rpx;
}

.swiper-img {
    width: 100%;
    height: 100%;
}

.bulletin-tip {
    border-bottom: 1rpx solid #eee;
    position: relative;
    top: 20rpx;
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.icon-tip {
    width: 8rpx;
    height: 30rpx;
    background-color: #1296db;
    margin-left: 15rpx;
}

.icon-txt {
    margin-left: 10rpx;
}

.bulletin-left {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.bulletin-right {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-right: 10rpx;
}

.icon-more {
    width: 48rpx;
    height: 48rpx;
}

.bulletin {
    height: 300rpx;
    background-color: #fff;
}

.service-tip {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    background-color: #fff;
    position: relative;
    top: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.option-area {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 350rpx;
    background-color: #fff;
}

.option-btn {
    width: 200rpx;
    height: 200rpx;
    background-color: #fff;
    border-radius: 50%;
    text-align: center;
    align-items: center;
    color: #fff;
}

.opt-repair {
    background-color: #ff9620;
}

.opt-query {
    background-color: #00bddd;
}

.opt-comment {
    background-color: #81cf2d;
}

.option-img {
    width: 100%;
    text-align: center;
}

.option-icon {
    width: 32px;
    height: 32px;
    margin-top: 30rpx;
}