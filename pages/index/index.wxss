/* pages/index/index.wxss */

.container {
    background-color: #eee;
}

swiper {
    position: relative;
    top: 10rpx;
}

.swiper-img {
    width: 100%;
    height: 100%;
}

.bulletin-tip {
    border: 1px solid #ccc;
    position: relative;
    top: 20rpx;
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

/* .bulletin-tip text {
    color: #1296db;
} */

.bulletin-left {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-left: 10rpx;
}

.bulletin-right {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-right: 10rpx;
}

.icon-laba {
    width: 16px;
    height: 16px;
}

.icon-more {
    width: 16px;
    height: 16px;
}

.bulletin {
    height: 300rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
}

.option-area {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 400rpx;
}

.option-btn {
    width: 200rpx;
    height: 200rpx;
    background-color: #fff;
    border-radius: 10px;
    text-align: center;
    align-items: center;
}

.option-img {
    width: 100%;
    text-align: center;
}

.option-icon {
    width: 32px;
    height: 32px;
    margin-top: 30rpx;
}