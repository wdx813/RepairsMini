<template name='search-box'>
<form bindsubmit='bindSubmit'>
    <view class='search-box'>
        <view class='input-box'>
            <image class='search-icon' src='../../images/search-icon.png'></image>
            <input type='text' name='keyword' confirm-type='search' bindconfirm='bindSubmit' placeholder='请输入关键字' placeholder-class='placeholder'></input>
        </view>
        <button class='search-btn' form-type='submit'>搜索</button>
    </view>
</form>
</template>