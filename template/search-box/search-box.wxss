.search-box {
    width: 100%;
    height: 110rpx;
    background-color: #fff; 
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.input-box {
    width: 70%;
    height: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    left: 3.5%;
    background-color: #eee;
    border-radius: 10rpx;
}

.search-icon {
    width: 48rpx;
    height: 48rpx;
}

input {
    width: 90%;
    height: 80%;
}

.placeholder {
    font-size: 32rpx;
}

.search-btn {
    width: 150rpx;
    height: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #4ba7e7;
    color: #fff;
    position: relative;
    left: 10rpx;
}